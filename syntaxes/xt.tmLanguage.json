{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "xt",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line",
					"match": "::.*"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.operator",
					"match": "(?<=\\s|^)(add|call|cls|dec|div|evl|inc|inm|inms|jmp|lwr|mul|num|out|pop|psh|read|rem|rep|rnd|rng|sub|tstr|upr|whl)(?=\\s|$)"
				},
				{
					"name": "keyword.control",
					"match": "(?<=\\s|^)(==|<|<=|>|>=|!=|in|xin|is|ext|imp|pause|ret)(?=\\s|$)"
				},
				{
					"name": "constant.numeric",
					"match": "(?<=\\s|^)-?(\\d+.?|\\d*\\.\\d+)(?=\\s|$)"
				},
				{
					"name": "entity.name.section",
					"match": "(?<=\\s|^):\\S+(?=\\s|$)"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double",
			"begin": "(?<=\\s|^)\"",
			"end": "(?<!\\\\)\"(?=\\s|$)",
			"patterns": [
				{
					"match": "(\\$\\().*(\\))",
					"captures": {
						"1": {
							"name": "constant.character.escape"
						},
						"2": {
							"name": "constant.character.escape"
						}
					}
				},
				{
					"name": "constant.character.escape",
					"match": "(\\\\033\\[|\\\\.)"
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "variable.parameter",
					"match": "(?<=\\s|^)_a\\d+(?=\\s|$)"
				},
				{
					"name": "entity.name.tag",
					"match": "(?<=\\s|^)-\\S*(?=\\s|$)"
				},
				{
					"name": "variable.name",
					"match": "(?<=\\s|^)\\S+(?=\\s|$)"
				}
			]
		}
	},
	"scopeName": "source.xt"
}