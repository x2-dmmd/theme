{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "xt",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#comparators"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#sections"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line",
					"match": ":: .*"
				}
			]
		},
		"comparators": {
			"patterns": [
				{
					"name": "keyword.control.xt",
					"match": "(?<=\\s|^)(==|!=|>=|<=|>|<|in|xin)(?=\\s|$)"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.xt",
					"match": "\\b(add|call|cls|dec|div|evl|ext|imp|inc|jmp|lwr|mul|num|out|pause|pop|psh|read|rem|rep|ret|rnd|rng|sub|tstr|upr|whl)\\b"
				}
			]
		},
		"sections": {
			"patterns": [
				{
					"name": "entity.name.section",
					"match": "(?<=\\s|^):\\S+"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.xt",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "variable",
					"begin": "(?<=\\$\\()",
					"end": "(?=\\))",
					"patterns": [
						{
							"include": "#comparators"
						},
						{
							"include": "#operators"
						},
						{
							"include": "#variables"
						}
					]
				},
				{
					"name": "constant.character.escape.xt",
					"match": "(\\\\033\\[|\\\\.|\\$\\(|\\))"
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "constant.numeric",
					"match": "(?<=\\s|^)-?\\d+"
				},
				{
					"name": "variable.parameter",
					"match": "(?<=\\s|^)_a\\d+"
				},
				{
					"name": "entity.name.function",
					"match": "(?<=\\s|^)-\\S*?(?=\\)\"|\\)\\\\\"|\\s|$)"
				},
				{
					"name": "variable.name",
					"match": "(?<=\\s|^)\\S+?(?=\\)\"|\\)\\\\\"|\\s|$)"
				}
			]
		}
	},
	"scopeName": "source.xt"
}