{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "xt",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#literals"
		},
		{
			"include": "#sections"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"match": "::\\s*TODO.*",
					"name": "entity.name.tag"
				},
				{
					"match": "::\\s*BUG.*",
					"name": "string.quoted"
				},
				{
					"match": "::\\s*WARNING.*",
					"name": "entity.name.selector"
				},
				{
					"match": "::\\s*ERROR.*",
					"name": "invalid.illegal"
				},
				{
					"match": "::\\s*NOTE.*",
					"name": "constant.language"
				},
				{
					"match": "::\\s*IDEA.*",
					"name": "constant.character.escape"
				},
				{
					"match": "::\\s*\\*.*",
					"name": "constant.character.escape"
				},
				{
					"match": "::\\s*!.*",
					"name": "constant.language"
				},
				{
					"match": "::\\s*\\+.*",
					"name": "string.quoted"
				},
				{
					"match": "::\\s*-.*",
					"name": "invalid.illegal"
				},
				{
					"match": "::\\s*@.*",
					"name": "keyword.operator"
				},
				{
					"match": "::.*",
					"name": "comment.line"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"match": "(?<=^|\\s|\\()(add|call|char|cls|cmp|cnst|dec|div|evl|flt|inc|idx|inm|inms|jmp|len|load|lwr|mul|num|out|pop|psh|pvk|read|rem|rep|rnd|rng|save|slc|str|sub|try|upr|wait|whl)(?=$|\\s|\\))",
					"name": "keyword.operator"
				},
				{
					"match": "(?<=^|\\s|\\()(as|end|ext|imp|ret|skp|thrw)(?=$|\\s|\\))",
					"name": "keyword.control"
				},
				{
					"match": "(==|!=|>=|<=|>|<)",
					"name": "keyword.control"
				},
				{
					"match": "(?<=^|\\s|\\()(in|xin|is|from)(?=$|\\s|\\))",
					"name": "keyword.control"
				},
				{
					"match": "(\\(|\\))",
					"name": "constant.character.escape"
				}
			]
		},
		"literals": {
			"patterns": [
				{
					"match": "(?<=^|\\s|\\()[+-]?(\\d+\\.?|\\d*\\.\\d+)(?=$|\\s|\\))",
					"name": "constant.numeric"
				}
			]
		},
		"sections": {
			"patterns": [
				{
					"captures": {
						"1": {
							"patterns": [
								{
									"match": "@[A-Za-z]+",
									"name": "entity.name.tag"
								},
								{
									"match": "[A-Za-z]+",
									"name": "entity.name.section"
								}
							]
						}
					},
					"match": ":(@?[A-Za-z]+)",
					"name": "entity.name.function"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"captures": {
						"1": {
							"patterns": [
								{
									"match": "(\\\\033\\[|\\\\.)",
									"name": "constant.character.escape"
								}
							]
						}
					},
					"match": "(?<!\\\\)\"(.*?)(?<!\\\\)\"",
					"name": "string.quoted"
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"match": "(?<=^|\\s|\\()#\\S+?(?=$|\\s|\\))",
					"name": "variable.parameter"
				},
				{
					"match": "(?<=^|\\s|\\()@\\S*?(?=$|\\s|\\))",
					"name": "constant.language"
				},
				{
					"match": "(?<=^|\\s|\\()\\S+?(?=$|\\s|\\))",
					"name": "variable.name"
				}
			]
		}
	},
	"scopeName": "source.xt"
}