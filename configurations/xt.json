{
    "comments": {
        "lineComment": "::"
    },
    "autoClosingPairs": [
        [ "{", "}" ],
        [ "[", "]" ],
        [ "(", ")" ],
        [ "\"", "\"" ],
        [ "'", "'" ],
        [ "`", "`" ]
    ],
    "surroundingPairs": [
        [ "{", "}" ],
        [ "[", "]" ],
        [ "(", ")" ],
        [ "\"", "\"" ],
        [ "'", "'" ],
        [ "`", "`" ]
    ],
    "folding": {
        "markers": {
            "end": "::\\s*#foldEnd",
            "start": "::\\s*#foldStart"
        }
    },
    "indentationRules": {
        "decreaseIndentPattern": "^\\s*:@?[A-Za-z]+[\\s\\S]*$",
        "increaseIndentPattern": "^\\s*:@?[A-Za-z]+[\\s\\S]*$"
    }
}